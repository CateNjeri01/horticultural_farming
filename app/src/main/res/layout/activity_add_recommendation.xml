<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecommendationActivity">

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:progress="20"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/crop_image_iv"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@android:color/black" />

        <Button
            android:id="@+id/upload_img_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="32dp"
            android:text="Upload Image"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <EditText
        android:id="@+id/crop_name_et"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/tfbg"
        android:hint="Name..."
        android:padding="8dp"
        android:paddingStart="16dp" />

    <EditText
        android:id="@+id/crop_temp_et"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crop_name_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/tfbg"
        android:hint="Temperature..."
        android:padding="8dp"
        android:paddingStart="16dp" />

    <EditText
        android:id="@+id/crop_humidity_et"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crop_temp_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/tfbg"
        android:hint="Humidity..."
        android:padding="8dp"
        android:paddingStart="16dp" />

    <EditText
        android:id="@+id/crop_rainfall_et"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crop_humidity_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/tfbg"
        android:hint="Rainfall Amount..."
        android:padding="8dp"
        android:paddingStart="16dp" />


    <EditText
        android:id="@+id/crop_dewpoint_et"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crop_rainfall_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/tfbg"
        android:hint="Dew Point..."
        android:padding="8dp"
        android:paddingStart="16dp" />


    <EditText
        android:id="@+id/crop_soilph_et"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crop_dewpoint_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/tfbg"
        android:hint="Soil pH..."
        android:padding="8dp"
        android:paddingStart="16dp" />

    <Button
        android:id="@+id/upload_btn"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/crop_soilph_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:hint="Upload Details"
        android:padding="8dp"
        android:textAllCaps="false" />

</RelativeLayout>